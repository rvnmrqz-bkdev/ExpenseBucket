<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.arvinmarquez.expensebucket.presentation.expenses.fragment_list.HomeFragment"
        android:label="Expenses"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addTransactionFragment"
            app:destination="@id/addTransactionFragment" />
        <action
            android:id="@+id/action_homeFragment_to_updateTransactionFragment"
            app:destination="@id/updateTransactionFragment" />
        <action
            android:id="@+id/action_homeFragment_to_categoryListFragment"
            app:destination="@id/categoryListFragment" />
    </fragment>
    <fragment
        android:id="@+id/addTransactionFragment"
        android:name="com.arvinmarquez.expensebucket.presentation.expenses.fragment_add.AddTransactionFragment"
        android:label="Add"
        tools:layout="@layout/fragment_add_transaction">
        <action
            android:id="@+id/action_addTransactionFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateTransactionFragment"
        android:name="com.arvinmarquez.expensebucket.presentation.expenses.fragment_update.UpdateTransactionFragment"
        android:label="Edit"
        tools:layout="@layout/fragment_update_transaction">
        <action
            android:id="@+id/action_updateTransactionFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="item"
            app:argType="com.arvinmarquez.expensebucket.data.pojo.ExpenseWithCategory" />
    </fragment>
    <fragment
        android:id="@+id/categoryListFragment"
        android:name="com.arvinmarquez.expensebucket.presentation.categories.fragment_list.CategoryListFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_category_list">
        <action
            android:id="@+id/action_categoryListFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_categoryListFragment_to_categoryEditFragment"
            app:destination="@id/categoryEditFragment" />
        <action
            android:id="@+id/action_categoryListFragment_to_categoryAddFragment"
            app:destination="@id/categoryAddFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoryEditFragment"
        android:name="com.arvinmarquez.expensebucket.presentation.categories.fragment_edit.CategoryEditFragment"
        android:label="fragment_category_edit"
        tools:layout="@layout/fragment_category_edit" >
        <action
            android:id="@+id/action_categoryEditFragment_to_categoryListFragment"
            app:destination="@id/categoryListFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoryAddFragment"
        android:name="com.arvinmarquez.expensebucket.presentation.categories.fragment_add.CategoryAddFragment"
        android:label="fragment_category_add"
        tools:layout="@layout/fragment_category_add" >
        <action
            android:id="@+id/action_categoryAddFragment_to_categoryListFragment"
            app:destination="@id/categoryListFragment" />
    </fragment>
</navigation>