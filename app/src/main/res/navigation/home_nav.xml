<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.arvinmarquez.expensebucket.ui.fragment_home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addTransactionFragment"
            app:destination="@id/addTransactionFragment" />
        <action
            android:id="@+id/action_homeFragment_to_updateTransactionFragment"
            app:destination="@id/updateTransactionFragment" />
    </fragment>
    <fragment
        android:id="@+id/addTransactionFragment"
        android:name="com.arvinmarquez.expensebucket.ui.fragment_add.AddTransactionFragment"
        android:label="Add"
        tools:layout="@layout/fragment_add_transaction">
        <action
            android:id="@+id/action_addTransactionFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateTransactionFragment"
        android:name="com.arvinmarquez.expensebucket.ui.fragment_update.UpdateTransactionFragment"
        android:label="fragment_update_transaction"
        tools:layout="@layout/fragment_update_transaction" >
        <action
            android:id="@+id/action_updateTransactionFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="item"
            app:argType="com.arvinmarquez.expensebucket.data.pojo.ExpenseWithCategory" />
    </fragment>
</navigation>